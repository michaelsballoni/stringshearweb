	<icon src="resources/iOS-images/180.png" width="180" height="180" />
	<icon src="resources/iOS-images/1024.png" width="1024" height="1024" />
    </platform>

	<preference name="Fullscreen" value="true" />
	<preference name="Orientation" value="landscape" />
</widget>
