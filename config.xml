<?xml version='1.0' encoding='utf-8'?>
<widget id="com.stringshear.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>String Shear</name>

    <description>
        Simple harmonic motion on a string physics simulation
    </description>

    <author email="balloni.michael.sydney@outlook.com" href="https://www.stringshear.com">
        Michael Balloni
    </author>

    <content src="index.html" />

    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
	<icon src="icon.png" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

	<icon src="resources/iOS-images/20.png" width="20" height="20" />
	<icon src="resources/iOS-images/29.png" width="29" height="29" />
	<icon src="resources/iOS-images/40.png" width="40" height="40" />
	<icon src="resources/iOS-images/50.png" width="50" height="50" />
	<icon src="resources/iOS-images/57.png" width="57" height="57" />
	<icon src="resources/iOS-images/58.png" width="58" height="58" />
	<icon src="resources/iOS-images/60.png" width="60" height="60" />
	<icon src="resources/iOS-images/72.png" width="72" height="72" />
	<icon src="resources/iOS-images/76.png" width="76" height="76" />
	<icon src="resources/iOS-images/80.png" width="80" height="80" />
	<icon src="resources/iOS-images/87.png" width="87" height="87" />
	<icon src="resources/iOS-images/100.png" width="100" height="100" />
	<icon src="resources/iOS-images/114.png" width="114" height="114" />
	<icon src="resources/iOS-images/120.png" width="120" height="120" />
	<icon src="resources/iOS-images/144.png" width="144" height="144" />
	<icon src="resources/iOS-images/152.png" width="152" height="152" />
